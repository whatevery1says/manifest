{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "date-only": {
      "type": "string",
      "format": "date"
    },
    "date-time-only": {
      "type": "string",
      "format": "date"
    },
    "date-range": {
      "type": "object",
      "properties": {
        "start": {
          "type": "string",
          "format": "date"
        },
        "end": {
          "type": "string",
          "format": "date"
        }
      },
      "required": [
        "start"
      ]
    },
    "date-time-range": {
      "type": "object",
      "properties": {
        "start": {
          "type": "string",
          "format": "date-time"
        },
        "end": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "start"
      ]
    },
    "normal-date": {
      "type": "object",
      "properties": {
        "normal": {
          "anyOf": [
            {
              "$ref": "#/definitions/date-only"
            },
            {
              "$ref": "#/definitions/date-range"
            }
          ]
        }
      }
    },
    "precise-date": {
      "type": "object",
      "properties": {
        "normal": {
          "anyOf": [
            {
              "$ref": "#/definitions/date-time-only"
            },
            {
              "$ref": "#/definitions/date-time-range"
            }
          ]
        }
      }
    },
    "date": {
      "anyOf": [
        {
          "$ref": "#/definitions/date-only"
        },
        {
          "$ref": "#/definitions/date-time-only"
        },
        {
          "$ref": "#/definitions/date-range"
        },
        {
          "$ref": "#/definitions/date-time-range"
        },
        {
          "$ref": "#/definitions/normal-date"
        },
        {
          "type": "array",
          "items": {
            "$ref": "#/definitions/date"
          }
        }
      ]
    }
  },
  "type": "object",
  "properties": {
    "name": {
      "$id": "/properties/name",
      "type": "string",
      "pattern": "^([-a-z0-9._])+$"
    },
    "namespace": {
      "$id": "/properties/namespace",
      "type": "string",
      "pattern": "we1sv2.0"
    },
    "metapath": {
      "$id": "/properties/metapath",
      "type": "string",
      "pattern": "^(Corpus,)+"
    },
    "title": {
      "$id": "/properties/title",
      "type": "string"
    },
    "date": {
      "$ref": "#/definitions/date"
    },
    "description": {
      "$id": "/properties/description",
      "type": "string"
    },
    "id": {
      "$id": "/properties/id",
      "type": "string"
    },
    "_id": {
      "$id": "/properties/_id",
      "type": "string"
    },
    "image": {
      "$id": "/properties/image",
      "type": "string"
    },
    "keywords": {
      "$id": "/properties/keywords",
      "type": "array",
      "items": {
        "$id": "/properties/keywords/items",
        "type": "string"
      }
    },
    "label": {
      "$id": "/properties/label",
      "type": "string"
    },
    "licenses": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "pattern": "^([-a-zA-Z0-9._])+$"
          },
          "path": {
            "type": "string",
            "pattern": "^(?=^[^./~])(^((?!\\.{2}).)*$).*$"
          },
          "title": {
            "type": "string"
          }
        }
      }
    },
    "notes": {
      "$id": "/properties/notes",
      "type": "array",
      "items": {
        "$id": "/properties/notes/items",
        "type": "string"
      }
    },
    "OCR": {
      "type": "boolean",
      "default": false
    },
    "shortTitle": {
      "$id": "/properties/shortTitle",
      "type": "string"
    },
    "version": {
      "$id": "/properties/version",
      "type": "string"
    },
    "format": {
      "type": "string"
    },
    "mediatype": {
      "type": "string",
      "pattern": "^(.+)/(.+)$"
    },
    "encoding": {
      "type": "string",
      "default": "utf-8"
    }
  },
  "documentType": {
    "type": "string"
  },
  "required": [
    "name",
    "namespace",
    "metapath",
    "title"
  ],
  "additionalProperties": true
}