{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "definitions": {
        "_id": {
            "type": "object",
            "properties": {
                "_id": {
                    "type": "string",
                    "pattern": "[a-zA-Z-_]+"
                }
            },
            "required": [
                "_id"
            ],
            "additionalProperties": False
        },
        "altTitle": {
            "type": "object",
            "properties": {
                "altTitle": {
                    "type": "string"
                }
            },
            "additionalProperties": False
        },
        "date": {
            "type": "object",
            "properties": {
                "date": {
                    "type": "array",
                    "items": {
                        "oneOf": [
                            {
                                "type": "string",
                                "pattern": "DATEFORMAT"
                            },
                            {
                                "type": "string",
                                "format": "date-time"
                            },
                            {
                                "$ref": "#/definitions/daterange"
                            },
                            {
                                "$ref": "#/definitions/precisedaterange"
                            },
                            {
                                "$ref": "#/definitions/normal"
                            },
                            {
                                "$ref": "#/definitions/precise"
                            }
                        ]
                    }
                }
            },
            "required": [
                "date"
            ],
            "additionalProperties": False
        },
        "daterange": {
            "type": "object",
            "properties": {
                "start": {
                    "type": "string",
                    "pattern": "DATEFORMAT"
                },
                "end": {
                    "type": "string",
                    "pattern": "DATEFORMAT"
                }
            },
            "required": [
                "start",
                "end"
            ],
            "additionalProperties": False
        },
        "description": {
            "type": "object",
            "properties": {
                "description": {
                    "type": "string"
                }
            },
            "additionalProperties": False
        },
        "group": {
            "type": "object",
            "properties": {
                "group": {
                    "type": "string"
                }
            },
            "additionalProperties": False
        },
        "label": {
            "type": "object",
            "properties": {
                "label": {
                    "type": "string"
                }
            },
            "additionalProperties": False
        },
        "namespace": {
            "type": "object",
            "properties": {
                "namespace": {
                    "type": "string",
                    "default": "we1sv1.1"
                }
            },
            "required": [
                "namespace"
            ],
            "additionalProperties": False
        },
        "normal": {
            "type": "object",
            "properties": {
                "normal": {
                    "type": "array",
                    "items": {
                        "oneOf": [
                            {
                                "type": "string",
                                "pattern": "DATEFORMAT"
                            },
                            {
                                "$ref": "#/definitions/daterange"
                            }
                        ]
                    }
                }
            },
            "required": [
                "normal"
            ],
            "additionalProperties": False
        },
        "note": {
            "type": "object",
            "properties": {
                "note": {
                    "type": "string"
                }
            },
            "additionalProperties": False
        },
        "notes": {
            "type": "object",
            "properties": {
                "notes": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/note"
                    }
                }
            },
            "required": [
                "notes"
            ],
            "additionalProperties": False
        },
        "path": {
            "type": "object",
            "properties": {
                "path": {
                    "type": "string",
                    "pattern": "^,[a-zA-Z-_,]+,$"
                }
            },
            "required": [
                "path"
            ],
            "additionalProperties": False
        },
        "precise": {
            "type": "object",
            "properties": {
                "precise": {
                    "type": "array",
                    "items": {
                        "oneOf": [
                            {
                                "type": "string",
                                "format": "date-time"
                            },
                            {
                                "$ref": "#/definitions/precisedaterange"
                            }
                        ]
                    }
                }
            },
            "required": [
                "precise"
            ],
            "additionalProperties": False
        },
        "precisedaterange": {
            "type": "object",
            "properties": {
                "start": {
                    "type": "string",
                    "format": "date-time"
                },
                "end": {
                    "type": "string",
                    "format": "date-time"
                }
            },
            "required": [
                "start",
                "end"
            ],
            "additionalProperties": False
        },
        "refLocation": {
            "type": "object",
            "properties": {
                "refLocation": {
                    "type": "string"
                }
            },
            "additionalProperties": False
        },
        "title": {
            "type": "object",
            "properties": {
                "title": {
                    "type": "string"
                }
            },
            "additionalProperties": False
        }
    },
    "type": "object",
    "properties": {
        "_id": {
            "$ref": "#/definitions/_id"
        },
        "namespace": {
            "$ref": "#/definitions/namespace"
        },
        "path": {
            "$ref": "#/definitions/path"
        },
        "description": {
            "$ref": "#/definitions/description"
        },
        "notes": {
            "$ref": "#/definitions/notes"
        },
        "date": {
            "$ref": "#/definitions/date"
        },
        "group": {
            "$ref": "#/definitions/group"
        },
        "label": {
            "$ref": "#/definitions/label"
        },
        "title": {
            "$ref": "#/definitions/title"
        },
        "altTitle": {
            "$ref": "#/definitions/altTitle"
        },
        "refLocation": {
            "$ref": "#/definitions/refLocation"
        },
        "authors": {
            "type": "array"
        },
        "publication": {
            "type": "string"
        },
        "publisher": {
            "type": "string"
        },
        "edition": {
            "type": "string"
        },
        "contentType": {
            "type": "string"
        },
        "language": {
            "type": "string"
        },
        "country": {
            "type": "string"
        }
    },
    "required": [
        "_id",
        "namespace",
        "path",
        "description",
        "date",
        "publication",
        "publisher"
    ]
}